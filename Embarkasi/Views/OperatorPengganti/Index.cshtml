@section styles {
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/alertify.min.js"></script>
    <script>
        var baseLink = '@Url.Action("Function", "Controller")';
        var controllerName = "@ViewBag.Controller";
        var dataTable;

        $(document).ready(function () {
            getAll();
        });

        function btnAdd() {
            $('#btnSave').show();
            $('#btnUpdate').hide();
            $('#formBS').trigger("reset");
            $('.modalBS').modal('show');
        }

        function btnEdit(id) {
            $('#btnSave').hide();
            $('#btnUpdate').show();
            $('#formBS').trigger("reset");
            getData(id);
            $('.modalBS').modal('show');
        }

        function getAll() {
            var link = baseLink.replace("Controller", controllerName).replace("Function", "GetAll");

            dataTable = $("#tableReady").DataTable({
                "order": [[1, "desc"]],
                "ajax": {
                    "url": link,
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": "data"
                },
                "columns": [
                    { "data": "nik" },
                    { "data": "nama_lengkap" },
                    {
                        "data": "kategori_tidur",
                        "render": function (data, type, row) {
                            if (type === 'display') {
                                let badgeClass = "";
                                let displayText = data || "Belum Upload"; // Handle empty/null values

                                switch (data) {
                                    case "Cukup Tidur":
                                        badgeClass = "badge-primary";
                                        break;
                                    case "Dalam Pengawasan":
                                        badgeClass = "badge-warning";
                                        break;
                                    case "Kurang Tidur":
                                        badgeClass = "badge-danger";
                                        break;
                                    default:
                                        badgeClass = "badge-secondary"; // For "Belum Upload Jam Tidur"
                                }

                                return `<span class="badge ${badgeClass}">${displayText}</span>`;
                            }
                            return data; // Default for other types (e.g., export)
                        }
                    },
                ],
                "language": {
                    "emptyTable": "Tidak ada data"
                }
            });
        }



        function getData(id) {
            var link = baseLink.replace("Controller", controllerName).replace("Function", "Get");

            $.ajax({
                type: "GET",
                url: `${link}/${id}`,
                success: function (response) {
                    if (response.success) {
                        var data = response.data;
                        $('#nik').val(data.nik);
                        $('#nama_lengkap').val(data.nama_lengkap);
                        $('#kategori_tidur').val(data.kategori_tidur);
                    } else {
                        alert("Terjadi kesalahan: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Terjadi kesalahan: ", error);
                    alert("Terjadi kesalahan saat mengambil data.");
                }
            });
        }


    </script>
}